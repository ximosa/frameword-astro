<Layout title="Admin - Nuevo Post" description="Crear nuevo post del blog">
    <div class="bg-gray-50 dark:bg-gray-900 min-h-screen py-4 px-4">
        <div
            class="max-w-6xl mx-auto bg-white dark:bg-gray-800 rounded-lg shadow p-4"
        >
            <form id="post-form" class="space-y-3">
                <!-- T√≠tulo y Categor√≠a -->
