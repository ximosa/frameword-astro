                        />
                    </div>
                </div>

                <!-- Editor -->
                <div>
                    <label
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                        >Contenido * <span class="text-xs text-gray-500"
                            >(Markdown)</span
                        ></label
                    >
                    <div
                        class="bg-gray-100 dark:bg-gray-900 border border-gray-300 dark:border-gray-600 rounded-t p-1.5 flex flex-wrap gap-0.5"
                    >
                        <button
                            type="button"
                            data-action="bold"
                            class="toolbar-btn"
                            title="Negrita"><strong>B</strong></button
                        >
                        <button
                            type="button"
                            data-action="italic"
                            class="toolbar-btn"
                            title="Cursiva"><em>I</em></button
                        >
                        <div
                            class="w-px h-6 bg-gray-300 dark:bg-gray-600 mx-0.5"
                        >
                        </div>
                        <button
                            type="button"
                            data-action="h2"
                            class="toolbar-btn"
                            title="H2">H2</button
                        >
                        <button
                            type="button"
                            data-action="h3"
                            class="toolbar-btn"
                            title="H3">H3</button
                        >
                        <div
                            class="w-px h-6 bg-gray-300 dark:bg-gray-600 mx-0.5"
                        >
                        </div>
                        <button
                            type="button"
                            data-action="link"
                            class="toolbar-btn"
                            title="Enlace">üîó</button
                        >
                        <button
                            type="button"
                            data-action="image"
                            class="toolbar-btn"
                            title="Imagen">üñºÔ∏è</button
                        >
                        <button
                            type="button"
                            data-action="youtube"
                            class="toolbar-btn"
                            title="YouTube">‚ñ∂Ô∏è</button
                        >
                        <div
                            class="w-px h-6 bg-gray-300 dark:bg-gray-600 mx-0.5"
                        >
                        </div>
                        <button
                            type="button"
                            data-action="list"
                            class="toolbar-btn"
                            title="Lista">‚â°</button
                        >
                        <button
                            type="button"
                            data-action="code"
                            class="toolbar-btn"
                            title="C√≥digo">&lt;/&gt;</button
                        >
                        <button
                            type="button"
                            data-action="quote"
                            class="toolbar-btn"
                            title="Cita">"</button
                        >
                    </div>
                    <textarea
                        id="content"
                        required
                        rows="12"
                        placeholder="Escribe tu contenido aqu√≠..."
                        class="w-full px-3 py-2 text-sm rounded-b border border-t-0 border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 font-mono resize-y"
                    ></textarea>
                </div>

                <!-- Botones -->
                <div class="flex flex-wrap gap-2">
                    <button
                        type="button"
                        id="preview-btn"
                        class="px-4 py-2 text-sm bg-gray-600 hover:bg-gray-700 text-white font-medium rounded"
                        >üëÅÔ∏è Vista Previa</button
                    >
                    <button
                        type="button"
                        id="copy-btn"
                        class="px-4 py-2 text-sm bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded"
                        >üìã Copiar</button
                    >
                    <button
                        type="submit"
                        class="px-4 py-2 text-sm bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-medium rounded"
                        >üíæ Descargar MDX</button
                    >
                </div>
            </form>
        </div>
    </div>

    <!-- Modal -->
    <div
        id="preview-modal"
        class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4"
    >
        <div
            class="bg-white dark:bg-gray-800 rounded-lg max-w-4xl w-full max-h-[90vh] overflow-hidden flex flex-col"
        >
            <div
                class="px-4 py-3 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between"
            >
                <h2 class="text-lg font-bold text-gray-900 dark:text-white">
                    Vista Previa
                </h2>
                <button
                    id="close-preview"
                    class="p-1.5 hover:bg-gray-100 dark:hover:bg-gray-700 rounded"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path></svg
                    >
                </button>
            </div>
            <div class="p-4 overflow-y-auto flex-1">
                <pre
                    id="preview-content"
                    class="bg-gray-50 dark:bg-gray-900 p-3 rounded text-xs overflow-x-auto"><code /></pre>
            </div>
        </div>
    </div>

    <!-- Notificaci√≥n -->
    <div
        id="notification"
        class="hidden fixed bottom-4 right-4 bg-green-600 text-white px-4 py-3 rounded-lg shadow-xl flex items-center gap-2 z-50"
    >
        <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
                stroke-linecap="round"
                stroke-linejoin="round"
