<style>
    .toolbar-btn {
        @apply px-2 py-1 text-sm rounded hover:bg-gray-200 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 transition-colors min-w-[28px] text-center;
    }
</style>

<script>
    const contentTextarea = document.getElementById(
        "content",
    ) as HTMLTextAreaElement;

    function insertAtCursor(
        before: string,
        after: string = "",
        placeholder: string = "",
    ) {
        const start = contentTextarea.selectionStart;
        const end = contentTextarea.selectionEnd;
        const selectedText = contentTextarea.value.substring(start, end);
        const textToInsert = selectedText || placeholder;

        const newText = before + textToInsert + after;
        const currentValue = contentTextarea.value;

        contentTextarea.value =
            currentValue.substring(0, start) +
            newText +
            currentValue.substring(end);

        const newCursorPos =
            start + before.length + (selectedText ? selectedText.length : 0);
        contentTextarea.focus();
        contentTextarea.setSelectionRange(
            newCursorPos,
            newCursorPos + (selectedText ? 0 : placeholder.length),
        );
    }

    document.querySelectorAll("[data-action]").forEach((btn) => {
        btn.addEventListener("click", (e) => {
            const action = (e.currentTarget as HTMLElement).dataset.action;

            switch (action) {
                case "bold":
                    insertAtCursor("**", "**", "negrita");
                    break;
                case "italic":
                    insertAtCursor("*", "*", "cursiva");
                    break;
                case "h2":
                    insertAtCursor("\n## ", "", "T√≠tulo");
                    break;
                case "h3":
                    insertAtCursor("\n### ", "", "Subt√≠tulo");
                    break;
                case "link":
                    const url = prompt("URL del enlace:", "https://");
                    if (url)
                        insertAtCursor("[", `](${url})`, "texto del enlace");
                    break;
                case "image":
                    const imgUrl = prompt("URL de la imagen:", "https://");
                    if (imgUrl) {
                        const altText = prompt(
                            "Texto alternativo:",
                            "Descripci√≥n",
                        );
                        insertAtCursor(`\n![${altText}](${imgUrl})\n`, "");
                    }
                    break;
                case "youtube":
                    const videoId = prompt("ID del video de YouTube:", "");
                    if (videoId)
                        insertAtCursor(`\n<YouTube id="${videoId}" />\n`, "");
                    break;
                case "list":
                    insertAtCursor("\n- ", "", "Item");
                    break;
                case "code":
                    insertAtCursor("\n```javascript\n", "\n```\n", "c√≥digo");
                    break;
                case "quote":
                    insertAtCursor("\n> ", "", "Cita");
                    break;
            }
        });
    });

    contentTextarea.addEventListener("keydown", (e) => {
        if (e.ctrlKey || e.metaKey) {
            if (e.key === "b") {
                e.preventDefault();
                insertAtCursor("**", "**", "negrita");
            } else if (e.key === "i") {
                e.preventDefault();
                insertAtCursor("*", "*", "cursiva");
            }
        }
    });

    function generateSlug(title: string): string {
        return title
            .toLowerCase()
            .normalize("NFD")
            .replace(/[\u0300-\u036f]/g, "")
            .replace(/[^a-z0-9]+/g, "-")
            .replace(/^-+|-+$/g, "");
    }

    function generateMDX(): string {
        const title = (document.getElementById("title") as HTMLInputElement)
            .value;
        const description = (
            document.getElementById("description") as HTMLTextAreaElement
        ).value;
        const date = (document.getElementById("date") as HTMLInputElement)
            .value;
        const author = (document.getElementById("author") as HTMLInputElement)
            .value;
        const image = (document.getElementById("image") as HTMLInputElement)
            .value;
        const category = (
            document.getElementById("category") as HTMLSelectElement
        ).value;
        const content = (
            document.getElementById("content") as HTMLTextAreaElement
        ).value;

        let mdx = `---\ntitle: "${title}"\ndescription: "${description}"\ndate: "${date}"\nauthor: "${author}"`;
        if (image) mdx += `\nimage: "${image}"`;
        mdx += `\ncategory: "${category}"\n---\n\n${content}\n`;
        return mdx;
    }

    function showNotification(message: string) {
        const notification = document.getElementById("notification")!;
        const notificationText = document.getElementById("notification-text")!;
        notificationText.textContent = message;
        notification.classList.remove("hidden");
        setTimeout(() => notification.classList.add("hidden"), 2500);
    }

    const descriptionInput = document.getElementById(
        "description",
    ) as HTMLTextAreaElement;
    const charCount = document.getElementById("char-count")!;
    descriptionInput.addEventListener(
        "input",
        () =>
            (charCount.textContent = descriptionInput.value.length.toString()),
    );

    const dateInput = document.getElementById("date") as HTMLInputElement;
    dateInput.valueAsDate = new Date();

    document.getElementById("preview-btn")!.addEventListener("click", () => {
        const mdx = generateMDX();
        const previewContent = document.querySelector("#preview-content code")!;
        previewContent.textContent = mdx;
        document.getElementById("preview-modal")!.classList.remove("hidden");
    });

    document.getElementById("close-preview")!.addEventListener("click", () => {
        document.getElementById("preview-modal")!.classList.add("hidden");
    });

    document.getElementById("copy-btn")!.addEventListener("click", async () => {
        const mdx = generateMDX();
        try {
            await navigator.clipboard.writeText(mdx);
            showNotification("¬°Copiado!");
        } catch (err) {
            showNotification("Error al copiar");
        }
    });

    document.getElementById("post-form")!.addEventListener("submit", (e) => {
        e.preventDefault();
        const title = (document.getElementById("title") as HTMLInputElement)
            .value;
        const mdx = generateMDX();
        const slug = generateSlug(title);
        const filename = `${slug}.mdx`;

        const blob = new Blob([mdx], { type: "text/markdown" });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = filename;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);

        showNotification(`¬°Descargado: ${filename}!`);
    });
</script>
